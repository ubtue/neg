<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1" metadata-complete="true">

  <display-name>Nomen et Gens</display-name>

  <servlet>
      <servlet-name>TestServlet</servlet-name>
      <servlet-class>de.uni_tuebingen.ub.nppm.servlet.TestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>TestServlet</servlet-name>
      <url-pattern>/TestServlet</url-pattern>
  </servlet-mapping>

  <servlet>
      <servlet-name>HilfeServlet</servlet-name>
      <servlet-class>de.uni_tuebingen.ub.nppm.servlet.gast.HilfeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>HilfeServlet</servlet-name>
      <url-pattern>/gast/hilfe</url-pattern>
  </servlet-mapping>

  <servlet>
      <servlet-name>ImpressumServlet</servlet-name>
      <servlet-class>de.uni_tuebingen.ub.nppm.servlet.gast.ImpressumServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>ImpressumServlet</servlet-name>
      <url-pattern>/gast/impressum</url-pattern>
  </servlet-mapping>

  <servlet>
      <servlet-name>EinstellungenServlet</servlet-name>
      <servlet-class>de.uni_tuebingen.ub.nppm.servlet.backend.EinstellungenServlet</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>EinstellungenServlet</servlet-name>
      <url-pattern>/einstellungen</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ForgotPasswordServlet</servlet-name>
    <servlet-class>de.uni_tuebingen.ub.nppm.servlet.ForgotPasswordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ForgotPasswordServlet</servlet-name>
    <url-pattern>/forgotPassword</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>NewPasswordServlet</servlet-name>
    <servlet-class>de.uni_tuebingen.ub.nppm.servlet.NewPasswordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NewPasswordServlet</servlet-name>
    <url-pattern>/NewPasswordServlet</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>
</web-app>
